- content_for :header do
  .navbar.navbar-default
    .navbar-collapse
      = render 'layouts/login'

.container-fluid
  .row
    #menu.col-md-2.col-xs-4
      %a.navbar-brand{href: '/', target: '_self'}
        %i.icon-pagesetup
        DesignCrit.io

      %nav
        %ul
          %li= link_to 'Public Projects', projects_path
          %li= link_to 'My Projects', projects_path

    %main.col-md-10.col-md-offset-2.col-xs-8.col-xs-offset-4
      %ul
        = render partial: 'project', collection: @projects, locals: {test: 1}

      = render 'layouts/footer'