include common/mixins
doctype 5
html
  head
    meta(http-equiv="content-type", content="text/html; charset=UTF-8")
    block title
      title myDesignCrit.com - #{title}
    block styles
      link(href='http://fonts.googleapis.com/css?family=Questrial|Quicksand:400,700', rel='stylesheet', type='text/css')
      != css('application')
    block scripts
      != js('application')
    - if (isProd)
      include scripts/analytics
  body(class="#{controller}")
    block content
    block footer
      include scripts/feedback