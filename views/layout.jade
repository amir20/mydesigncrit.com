doctype 5
html
  head
    block title
      title myDesignCrit.com - #{title}
    block styles
      link(href='http://fonts.googleapis.com/css?family=Quicksand:400,700', rel='stylesheet', type='text/css')
      != css('application')
    block scripts
      != js('application')
    - if (isProd)
      include scripts/analytics
  body(class="#{controller}")
    block content
    block footer
      include scripts/feedback