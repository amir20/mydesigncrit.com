- if (isLoggedIn)
  a#sign-in.dropdown-toggle(data-toggle='dropdown', href='#')
    i.icon-user
    |  Hi, #{user.name}!
    b.caret
  ul.dropdown-menu
    li.text Recent activity
    li.text(data-lazy='/user/activity/recent.json', data-lazy-trigger='#sign-in')
    li.divider
    li
      a(href='/user/activity/all')
        i.icon-briefcase
        |  Show All Projects
    li.divider
    li
      a(href='/logout')
        i.icon-signout
        |  Sign Out
- else
  a#sign-in.dropdown-toggle(data-toggle='dropdown', href='#')
    i.icon-user
    |  Sign In
    b.caret
  ul.dropdown-menu
    li
      a(href='/signin/google')
        i.icon-google-plus-sign
        |  Google
      a(href='/signin/facebook')
        i.icon-facebook-sign
        |  Facebook