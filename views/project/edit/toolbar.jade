div#toolbar.navbar.navbar-fixed-top.navbar-inverse
  .navbar-inner
    .container-fluid
      a.brand(href='/')
        |  myDesignCrit.com   
        img.retina(src='/img/bubble.png', alt='Logo', width=25, height=22)
                             
      .absolute-center      
        span.btn-group
          button#prev-page.btn.btn-inverse.icon-chevron-left.btn-small
          a#active-page.btn.btn-inverse.btn-small.pages-dropdown(data-toggle="dropdown")
            b.caret.pull-right
            i Loading...             
          ul.dropdown-menu                                                                 
          button#next-page.btn.btn-inverse.icon-chevron-right.btn-small
        span.popbox
         button.open.btn.btn-success.btn-small(title="Add a new page to this projects")
           i.icon-plus
           |  New Page       
         .box
           .arrow
           .arrow-border          
           form#new-page   
             label New Page URL
             .input-append
               input(type='url', placeholder='http://example.com', required=true)
               button.btn.btn-success(type="submit") Add
             a.pull-right.popbox-close(href='#') &times; cancel  
                      
      ul.nav.pull-right
        li
          a(href="/v/#{project.shortId}")
           i.icon-zoom-in
           |  Preview
        li
          a(href="/v/#{project.shortId}#share")
            i.icon-share
            |  Share
        li.dropdown
          include ../../auth/signin
        li.dropdown
          a.dropdown-toggle(data-toggle='dropdown', href='#')
            i.icon-cog
            b.caret
          ul.dropdown-menu
            li
              a#toggle-gridlines(href='#')
                i.icon-ban-circle
                |  Hide Grid Lines
