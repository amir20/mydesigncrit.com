#canvas-background
  background-image url(/img/checker.png)
  margin-right: 290px;
  padding-top 45px

  #canvas
    position relative
    margin 0 auto

    .crit
      absolute top left
      box-shadow 0 2px 4px #000
      border-radius 3px
      background rgba(238, 238, 238, 0.5)
      border transparent solid 2px

      &:hover, &.hover
        border-color lightBlue

      &.active
        border-color black
        background rgba(234, 91, 87, 0.8)
        box-shadow 0 2px 10px black

      .show-after
        width 0
        height 0
        overflow hidden

      .close
        display none
        opacity .5
        &:hover
          opacity .8

      &:hover .close
        display block

      h4
        absolute left
        left -52px
        top -10px
        text-align center
        opacity 0
        transition opacity .5s ease
        font-family "Helvetica Neue",Helvetica,Arial,sans-serif
        font-weight normal

        .num
          border-top-left-radius 3px
          border-bottom-left-radius 3px
          background-color #ff7537
          color black
          width 40px
          height 30px
          absolute left
          line-height 28px
          font-size 19px

        .num + .arrow
          width 0
          height 0
          border-top 15px solid transparent
          border-bottom 15px solid transparent
          border-left 15px solid #ff7537
          absolute left
          left 40px



#toolbar
  .navbar-inner
    padding 4px 20px
    height 35px
  
#sidebar
  fixed right
  width 260px
  height 100%
  background white
  padding 45px 20px 0
  box-shadow 0 0 4px #000
  z-index 2

  #crits
    li
      margin 3px 0
      a
        cursor pointer
      a.title
        white-space nowrap
        width 90%
        overflow hidden
        text-overflow ellipsis
        display block

   .page-header
     padding-bottom 0

   h2
     margin-bottom 0

  #crit-comment
     width 250px
     height 100px

  .thumbs
    margin-bottom 10px

    .thumbs-up, .thumbs-down
      background-image url(/img/glyphicons_343_thumbs_up.png)
      width 34px
      height 31px
      background-repeat no-repeat
      background-position center

    .thumbs-down
      background-image url(/img/glyphicons_344_thumbs_down.png)

  