@import "bootstrap.min.css"
@import nib
@import forms
@import index
@import project
@import gridlines
@import user
@import dialog

body
  font-family Geneva,Verdana,sans-serif
  min-width 940px

  &.welcome
    background #323232 no-repeat
    footer
      color #eee

  &.user
    background #efefef
    .container
      background #fff
      min-height 400px
      padding 25px 10px
    .navbar
      margin-bottom 0

label, h1, h2, h3, h4, .brand
  font-family 'Quicksand', sans-serif
  font-weight normal

h1, h2, h3, h4
  margin-bottom 12px

footer
  margin-top 50px
  color #777
  text-align center
  padding 5px
  font-size 10px

#beta
  absolute left
  left 0
  top 0

.navbar
  .brand
    font-weight bold

.navbar-inner
  border-radius 0
