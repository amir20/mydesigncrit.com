@import "bootstrap.min.css"
@import "icons.css"
@import popbox
@import nib
@import forms
@import index
@import project
@import gridlines
@import user
@import dialog
@import tabs

body
  min-width 940px
  font-family 'Questrial', sans-serif
  font-size 14px
  &.welcome
    background #323232 no-repeat
    .brand 
      margin-left 50px          
    footer
      color #eee
    .hero-unit p
      font-size 16px
  &.user
    background #343434
    .container
      background #fff
      min-height 400px
      padding 25px 10px
    .navbar
      margin-bottom 0      


input, button, select, textarea 
  font-family 'Questrial', sans-serif

label, h1, h2, h3, h4, .brand
  font-family 'Quicksand', sans-serif
  font-weight normal

.page-header
  padding-bottom 0        

h1, h2, h3, h4
  margin-bottom 12px

footer
  margin-top 50px
  color #777
  text-align center
  padding 5px
  font-size 10px

#beta
  absolute left
  left 0
  top 0

.navbar
  .btn-group .btn
    margin-top 6px                      
  .brand
    color #000    
    img.retina
      margin-top -8px
      margin-left -4px

.navbar-inner
  border-radius 0
