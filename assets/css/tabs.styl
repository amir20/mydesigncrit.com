#tab-container
  top 40px
  background #666
  z-index 1

ul.tabrow
  overflow hidden
  position relative
  margin 0
  padding 10px 20px 0

  li
    border 1px solid #aaa
    background linear-gradient(top, #ececec 50%, #d1d1d1 100%)
    display inline-block
    position relative
    z-index 1
    border-top-left-radius 6px
    border-top-right-radius 6px
    box-shadow 0 3px 3px rgba(0,0,0,0.40), inset 0 1px 0 #fff
    text-shadow 0 1px #fff
    margin 0 -1px
    padding 0 10px
    min-width 50px
    max-width 200px
    text-align center
  
    a
      color #555
      text-decoration none
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
      width 100%
      display inline-block
      line-height 26px
      i
        pointer-events none
        font-size 80%
        margin-right 4px

    &.new-page
      color #ffffff
      border 1px solid #555
      text-shadow 0 -1px 0 rgba(0, 0, 0, 0.25)
      background linear-gradient(top, #62c462, #51a351)
      box-shadow none
      left -10px
      transition left .2s ease
      z-index 0
      border-bottom-color #aaa

      &:hover
        left 0

      &:before, &:after
          border-color #555
      &:before
          box-shadow 2px 2px 0 #51a351
      &:after
        box-shadow -2px 2px 0 #51a351
      a
        color #fff

  
  li.selected
    background #fff
    color #333
    z-index 3
    border-bottom-color #fff
  
  &:before
    position absolute
    content " "
    width 100%
    bottom 0
    left 0
    z-index 1

  li:before,li:after
    border 1px solid #aaa
    position absolute
    bottom -1px
    width 5px
    height 5px
    content " "
  
  li:before
    left -6px
    border-bottom-right-radius 6px
    border-width 0 1px 1px 0
    box-shadow 2px 2px 0 #d1d1d1
  
  li:after
    right -6px
    border-bottom-left-radius 6px
    border-width 0 0 1px 1px
    box-shadow -2px 2px 0 #d1d1d1
  
  li.selected:before
    box-shadow 2px 2px 0 #fff
  
  li.selected:after
    box-shadow -2px 2px 0 #fff


